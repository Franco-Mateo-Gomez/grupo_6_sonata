<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/userConfig.css">
    <link rel="shortcut icon" href="/images/imagen_logo_sonata_v1.png">
    <script src="https://kit.fontawesome.com/0aeb7696ea.js" crossorigin="anonymous"></script>
    <title>Registro</title>

    <!--CUSTOM CSS-->
    <link rel="stylesheet" href="/css/styles_header.css">
    <link rel="stylesheet" href="/css/styles_footer.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main>
            <section class="encabezado_formulario">
                <h5>
                    <%=userConfig.email%>
                </h5>
                <div class="imagen_user" style="background-image: url(<%=userConfig.img%>);">
                </div>
                <h5><%=userConfig.nombreArtista%></h5>
            </section>
            <section class="contenedor_registro">

                <form action="/userConfig/9?_method=put"  method="post" enctype="multipart/form-data" class="formulario_registro">

                    <div class="campo_formulario_registro">
                        <label for="user_name">Nombre de usuario: </label>
                        <input value="<%=userConfig.nombreArtista%>" placeholder="Ejemplo: Artemis402" id="user_name" name="user_name" type="text"
                            value="<%=locals.oldData?oldData.user_name:null%>">
                        <% if (locals.errors && errors.user_name) { %>
                            <h6 style="color: red;">
                                <%=errors.user_name.msg%>
                            </h6>
                            <% } %>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="user_email">Correo electronico: </label>
                        <input value="<%=userConfig.email%>" placeholder="Ejemplo: artemisIris@dominio.com" id="user_email" name="user_email"
                            type="email" value="<%=locals.oldData?oldData.user_email:null%>">
                        <% if (locals.errors && errors.user_email) { %>
                            <h6 style="color: red;">
                                <%=errors.user_email.msg%>
                            </h6>
                            <% } %>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="client_fullname">Nombre completo: </label>
                        <input value="<%=userConfig.nombreCompleto%>" id="client_fullname" placeholder="Ejemplo: Artemisa Iris Herrera" name="client_fullname"
                            type="text" value="<%=locals.oldData?oldData.client_fullname:null%>">
                        <% if (locals.errors && errors.client_fullname) { %>
                            <h6 style="color: red;">
                                <%=errors.client_fullname.msg%>
                            </h6>
                            <% } %>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="user_image">Imagen de perfil: </label>
                        <input type="file" name="user_image" id="user_image">
                        <% if (locals.errors && errors.user_image) { %>
                            <h6 style="color: red;">
                                <%=errors.user_image.msg%>
                            </h6>
                            <% } %>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="user_password">Contraseña: </label>
                        <input value="<%=userConfig.clave%>" id="user_password" name="user_password" type="password">
                        <% if (locals.errors && errors.user_password) { %>
                            <h6 style="color: red;">
                                <%=errors.user_password.msg%>
                            </h6>
                            <% } %>
                    </div>

                    <div class="campo_formulario_registro">
                        <label for="user_passwordConfirmation">Confirmar contraseña: </label>
                        <input id="user_passwordConfirmation" name="user_passwordConfirmation" type="password">
                        <% if (locals.errors && errors.user_passwordConfirmation) { %>
                            <h6 style="color: red;">
                                <%=errors.user_passwordConfirmation.msg%>
                            </h6>
                            <% } %>
                    </div>


                    <div class="campo_formulario_registro_botones">
                        <input type="submit" value="Modificar">
                        <input type="reset" value="Cancelar">
                    </div>

                </form>
            </section>
        </main>
        <!--Footer-->
        <%- include('../partials/footer') %>
</body>

</html>