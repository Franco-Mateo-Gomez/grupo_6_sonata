<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Titulo e icono de la pestaña-->
    <title>¡Bienvenidos a Sonata!</title>
    <link rel="shortcut icon" href="/images/imagen_logo_sonata_v1.png">

    <!--CDN FONT AWESOME-->
    <script src="https://kit.fontawesome.com/0aeb7696ea.js" crossorigin="anonymous"></script>
    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

    <!--CUSTOM CSS-->
    <link rel="stylesheet" href="/css/styles_header.css">
    <link rel="stylesheet" href="/css/styles_footer.css">
    <link rel="stylesheet" href="/css/styles_main.css">

</head>

<body>
    <%- include('./partials/header') %>

    <main>

        <!--SLIDER DE ALBUMES POPULARES-->
        <section class="slider_album_populares">
            <div class="container">
                <h1 class="titulo_populares"><i class="fa-solid fa-compact-disc"></i> Albumes Populares</h1>
                <!-- Swiper -->
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        <%- include("./partials/index/productosPopulares")%>
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </section>



        <div class="padre-contenedor-slider">
            <section class="contenedor-slider-generos">
                <h2><i class="fa-solid fa-music"></i> Géneros</h2>

                <div class="slider-list" id="slider-list">
                    <button type="button" class="slider-arrow slider-prev" id="button-prev" data-button="button-prev"
                        onclick="app.processingButton(event)">
                        <i class="fa-solid fa-arrow-left"></i>
                    </button>

                    <div class="slider-track" id="track">

                        <div class="slider_contenedor_slides">
                            <%- include("./partials/index/productosGeneros")%>
                        </div>

                        <div class="slider_contenedor_slides">
                            <%- include("./partials/index/productosGeneros")%>
                        </div>

                    </div>

                    <button class="slider-arrow slider-next" id="button-next" data-button="button-next"
                        onclick="app.processingButton(event)">
                        <i class="fa-solid fa-arrow-right"></i>
                    </button>

                </div>


            </section>
        </div>

    </main>

    <!--Footer-->
    <%- include('./partials/footer') %>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script src="/scripts/script-slider-responsive.js"></script>
    <script src="/scripts/script-slider-generos.js"></script>

</body>

</html>